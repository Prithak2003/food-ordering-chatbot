<!DOCTYPE html>
<html ng-app="ai-waiter">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <style>
        .box-shadow { box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05); }
        </style>
    </head>
    <body ng-controller="rootCtl">

        <div class="container" style="margin-top: 10px; margin-bottom: 40px;" ng-cloak="true">
            <div class="row">
                <div class="col-4" style="margin-bottom: 20px;" ng-repeat="order in ui.order_list">
                    <div class="card box-shadow">
                        <div class="card-header" style="text-align: center;">
                            <h1 class="my-0 font-weight-normal">No. {{$index + 1}}</h1>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <ul>
                                    <li ng-repeat="order_item in order.order_item_list">{{order_item.label}} {{order_item.quantity}}個</li>
                                </ul>
                            </p>
                            <a href="#" class="btn btn-primary btn-block">完了</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript" src="/js/angular.min.js"></script>
        <script type="text/javascript" src="/js/module.js"></script>
        <script type="text/javascript" src="/js/boardCtl.js"></script>
        <script>
            angular.module("ai-waiter")
            .constant("order_list", <%- JSON.stringify(order_list) %>);
        </script>

    </body>
</html>
